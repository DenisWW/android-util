<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <com.yanxing.titlebarlibrary.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_main="@string/title"/>

    <com.yanxing.titlebarlibrary.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:back_img_visible="false"
        app:backgroundColor="@android:color/holo_red_light"
        app:title_main_color="@android:color/holo_green_light"
        app:title_main="@string/title4"/>

    <com.yanxing.titlebarlibrary.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_right="@string/right"
        app:title_main_color="@android:color/holo_green_light"
        app:title_main="@string/title3"/>

    <com.yanxing.titlebarlibrary.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_main_color="@color/colorMainDark"
        app:backgroundColor="@color/colorDefault"
        app:right_icon="@mipmap/share"
        app:back_img_resource="@mipmap/goback_dark"
        app:title_main="@string/title5"/>


</LinearLayout>