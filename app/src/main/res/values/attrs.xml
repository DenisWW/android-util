<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ProgressWheel Loading-->
    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
        <attr name="matProg_linearProgress" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="ProgressBar">
        <!--外圆环颜色-->
        <attr name="roundColor" format="color"/>
        <!--外圆环宽度-->
        <attr name="roundWidth" format="dimension"/>
        <!--百分比颜色-->
        <attr name="textColor" format="color"/>
        <!--百分比字体大小-->
        <attr name="textSize" format="dimension"/>
        <!--百分比字体可见性-->
        <attr name="textVisible" format="boolean"/>
        <!--外圆环进度颜色-->
        <attr name="progressColor" format="color"/>
        <!--进度的风格,空心0，实心1-->
        <attr name="style" format="integer"/>
    </declare-styleable>
    
    <declare-styleable name="SesameView">
        <!--最大数值-->
        <attr name="maxNum" format="integer"/>
        <!--圆盘起始的角度-->
        <attr name="startAngle" format="integer"/>
        <!--圆盘扫过的角度-->
        <attr name="sweepAngle" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CircleProgressView">
        <!--圆内刻度线宽度-->
        <attr name="circleLineBorderWidth" format="reference|dimension|integer" />
        <!--圆内刻度线内边距-->
        <attr name="circleLinePadding" format="reference|dimension|integer" />
        <!--线条颜色-->
        <attr name="circleLineColor" format="reference|color" />
        <!--进度条线条颜色-->
        <attr name="circleProgressLineColor" format="reference|color" />
        <!--文本字体大小-->
        <attr name="circleTextSize" format="reference|dimension|integer" />
        <!--文本字体颜色-->
        <attr name="circleTextColor" format="reference|color" />
        <!--进度最大值-->
        <attr name="circleMaxProgress" format="reference|dimension|integer" />
    </declare-styleable>
    
    <declare-styleable name="WheelView">
        <!-- 未选中文本颜色-->
        <attr name="outTextColor" format="color"/>
        <!-- 未选中文本大小-->
        <attr name="outTextSize" format="dimension"/>
        <!-- 选中文本颜色-->
        <attr name="centerTextColor" format="color"/>
        <!-- 未选中文本大小-->
        <attr name="CenterTextSize" format="dimension"/>
        <!-- 分割线文本颜色-->
        <attr name="IndicatorTextColor" format="color"/>
    </declare-styleable>


</resources>